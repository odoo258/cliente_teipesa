<odoo>
<data>

<record id="res_company_legend_form" model="ir.ui.view">
    <field name="name">res.company.legend.form</field>
    <field name="model">res.company</field>
    <field name="inherit_id" ref="base.view_company_form" />
    <field name="arch" type="xml">
       <xpath expr="//field[@id='company_currency']" position="after">
	        <field name="legend_ids">
	            <tree>
	                <field name="name"/>
	            </tree>
	        </field>
        </xpath>
    </field>
</record>


</data>
</odoo>